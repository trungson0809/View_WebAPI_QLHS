@{
    ViewData["Title"] = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/scripts/result.js"></script>
<div class="container">
    <div id="headings">
        <h2 id="title">Kết quả học tập</h2>
        <span id="hr"></span>
    </div>

    <div class="row col-5  bg-info p-3 mx-2">
        <div>
            <div class="col-md-12"> StudentId </div>
            <div class="col-md-12">
                <input type="number" class="form-control" id="studentId" disabled/>
            </div>

        </div>
       <div class="mt-2">
            <div class="col-md-12"> GPA </div>
            <div class="col-md-12">
                <input type="text" class="form-control" id="resultGPA" />
            </div>
       </div>
    
   
        <div class="form-group row mt-3 text-center">
            <div class="col-sm-12" style="font-size:25px">
                <button class="btn btn-primary btn-lg " onclick="updateAll()" id="btnUpdateAll"> Cập nhật </button>
                <button class="btn btn-warning btn-lg " id="btnEditResult" disabled> Lưu </button>
                <a href="~/Result/Index" class="btn  btn-secondary btn-lg ">Tải lại</a>

            </div>
        </div>
    </div>
    <div class="justify-content-center">
        @*Table*@
        <table id="casti_male" class="table table-hover " style="overflow:hidden; white-space: nowrap; ">

            <thead>
                <tr>
                    <th>
                        Number
                    </th>
                    <th>
                        StudentId
                    </th>
                    <th>
                        GPA
                    </th>
            </thead>
            <tbody id="resultData"> </tbody>
        </table>
    </div>
</div>

