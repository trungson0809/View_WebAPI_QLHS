@{
    ViewData["Title"] = "Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/scripts/subject.js"></script>
<div class="container">
    <div id="headings">
        <h2 id="title">Quản lý môn học</h2>
        <span id="hr"></span>
    </div>

    <div class="row col-5  bg-info p-3 mx-2">
        <div>
            <div class="col-md-12"> ID </div>
            <div class="col-md-12">
                <input type="number" class="form-control" id="subjectId" disabled/>
            </div>

        </div>
       <div class="mt-2">
            <div class="col-md-12"> Tên môn học </div>
            <div class="col-md-12">
                <input type="text" class="form-control" id="subjectName" />
            </div>
       </div>
   
        <div class="form-group row mt-3 text-center">
            <div class="col-sm-12" style="font-size:25px">
                <button class="btn btn-primary btn-lg " onclick="addSubject()" id="btnAddSubject"> Thêm mới </button>
                <button class="btn btn-warning btn-lg " id="btnEditSubject" disabled> Cập nhật </button>
                <a href="~/Subject/Index" class="btn  btn-secondary btn-lg ">Tải lại</a>

            </div>
        </div>
    </div>
    <div class="justify-content-center">
        @*Table*@
        <table id="casti_male" class="table table-hover " style="overflow:hidden; white-space: nowrap; ">

            <thead>
                <tr>
                    <th>
                        Number
                    </th>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
            </thead>
            <tbody id="subjectData"> </tbody>
        </table>
    </div>
</div>

