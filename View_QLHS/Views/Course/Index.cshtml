@{
    ViewData["Title"] = "Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/scripts/course.js"></script>
<div class="container">
    <div id="headings">
        <h2 id="title">Quản lý khoá học</h2>
        <span id="hr"></span>
    </div>

    <div class="row col-5  bg-info p-3 mx-2">
        <div>
            <div class="col-md-12"> StudentId </div>
            <div class="col-md-12">
                <input type="number" class="form-control" id="studentId" disabled/>
            </div>
        </div>
       <div class="mt-2">
            <div class="col-md-12">SubjectId</div>
            <div class="col-md-12">
                <input type="text" class="form-control" id="subjectId" disabled />
            </div>
       </div>
        <div class="mt-2">
            <div class="col-md-12"> Mark </div>
            <div class="col-md-12">
                <input type="text" class="form-control" id="courseMark" />
            </div>
        </div>
   
        <div class="form-group row mt-3 text-center">
            <div class="col-sm-12" style="font-size:25px">
                <button class="btn btn-primary btn-lg " onclick="addCourse()" id="btnAddCourse"> Thêm mới </button>
                <button class="btn btn-warning btn-lg " id="btnEditCourse" disabled> Cập nhật </button>
                <a href="~/Course/Index" class="btn  btn-secondary btn-lg ">Tải lại</a>

            </div>
        </div>
    </div>
   
    <div class="justify-content-center">
        @*Table*@
        <table id="casti_male" class="table table-hover " style="overflow:hidden; white-space: nowrap; ">
           
            <thead>
                <tr>
                    <th>
                        Number
                    </th>
                    <th>
                        StudentId
                    </th>
                    <th>
                        SubjectId
                    </th>
                    <th>
                        Mark
                    </th>
            </thead>
            <tbody id="courseData"> </tbody>
        </table>
    </div>
</div>

